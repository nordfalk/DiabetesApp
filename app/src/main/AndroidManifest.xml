<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fahadali.diabetesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dia_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".HomeMenuActivity"
            android:label="@string/title_activity_home_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BSugarOverviewActivity"
            android:label="@string/title_activity_bsuger_overview" />
        <activity android:name=".BSugarNotationActivity" />
        <activity android:name=".ReminderTypeSelectorActivity" />
        <activity android:name=".DoctorsAppointmentActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>